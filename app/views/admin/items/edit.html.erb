<div class="row">
     <div class="col-xs-10 col-xs-offset-1">
    <h2>商品編集</h2>
    <%= form_with(model: @item, url: admin_item_path, method: :patch, local: true) do |f| %>
    <% if @item.errors.any? %>
    <h3><%= @item.errors.count %>error occurrence</h3>
    <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
    	<div class="field">
          	 <%= image_tag @item.get_image(80,80) %>
    	</div>
    </div>
    <div class="col-xs-7">
            <div class="field">
            	<%= f.label :商品名 %>
            	<%= f.text_field :name, class: "form" %>
            </div>
            <div class="field">
            	<%= f.label :商品説明 %>
            	<%= f.text_area :introduction %>
            </div>

            <div class="field">
            	<%= f.label :税抜価格 %>
            	<%= f.text_field :price %>
            	円
            </div>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            </tr>

            <div class="text-right">
    		<%= f.submit "変更を保存", class:  "btn btn-primary text-right" %>
            </div>
        <% end %>
    </div>
</div>
