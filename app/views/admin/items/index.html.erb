<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
<h2>商品一覧</h2>
<div class="text-right">
<%= link_to "新規登録", new_admin_item_path, class:"btn btn-lg btn-primary" %>
</div>

<table class="table">
	<thead>
		<tr>
			<th>商品一覧</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
			<tr>
				<th><%= item.id %></th>
　　　　　<td><%= link_to item.name ,admin_item_path(item) %></td>
				<th><%= item.price %></th	>
				<th><% if item.is_active == true %>
					販売中
					<% else %>
					販売停止中
					<% end %>
				</th>
			</tr>
		<% end %>
		 <%= paginate @items %>
	</tbody>
</table>
</div>
</div>