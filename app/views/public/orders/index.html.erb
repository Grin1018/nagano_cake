<h2>注文履歴一覧</h2>
              <th scope="col">注文日</th>
              <th scope="col">配送先</th>
              <th scope="col">注文商品</th>
              <th scope="col">支払金額</th>
              <th scope="col">ステータス</th>
              <th scope="col">注文詳細</th>
            </tr>
      
          <tbody>
            <% @orders.each do |order| %>
                <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <p><%= order.postal_code %>&emsp;<%= order.address %></p>
                    <p><%= order.name %></p>
                  </td>
                  <td>
                  <% order.item_orders.all.each do |p| %>
                    <p><%= p.item.name %></p>
                  <%end %>
                  </td>
                  <td><%= order.total_price %>円</td>
                  <td><%= order.status %></td>
                  <td>
                  <%= link_to "表示する", order, class: 'btn btn-primary' %>
                  </td>
                </tr>
              <% end %>
          </tbody>
       