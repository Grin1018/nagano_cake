<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <%= flash[:order_new] %>
      <h2 class="red-border px-3">注文情報入力</h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-2 col-5">
      <div class="row">
        <strong class="red-border px-3">お支払い方法</strong>
      </div>

      <%= form_with model:@order do |f| %>
        <div class="form-check mt-3">
          <%= f.radio_button :payment, :クレジットカード %>
          <%= f.label :payment, "クレジットカード", {value: :"クレジットカード", style: "display: inline-block;"} %><br>
          <%= f.radio_button :payment, :銀行振込 %>
          <%= f.label :payment, "銀行振込", {value: :"銀行振込", style: "display: inline-block;"} %>
        </div>

        <div class="row mt-3">
          <strong class="red-border px-3">お届け先</strong>
        </div>
          <% address = current_customer.postal_code + current_customer.address + current_customer.last_name + current_customer.first_name %>
          <%= f.radio_button :select_address, 0 %>
          <%= f.label :select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %>
          <%= address %><br>

    </div>

    <div class=" offset-1 col-3">
       <div class="row mt-3">
          <strong class="red-border px-3">新しいお届け先</strong>
        </div>
       <%= f.radio_button :select_address, 1 %>
        <div class="form-group row mt-3">
          <%= f.text_field :postal_code, placeholder: "郵便番号", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group row">
          <%= f.text_field :address, placeholder: "住所", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group row">
          <%= f.text_field :name, placeholder:"山田一郎", class: "form-control offset-1 col-5" %>
        </div>

      <div class="row mt-5">
          <%= f.submit "確認画面へ進む", class: "btn btn-outline-danger ml-auto" %>
        </div>

        <% end %>
    </div>
  </div>
</div>